<!--EDITABLE FORM FOR EXAMINER AND SUPERVISOR REPORTS-->
<!DOCTYPE html>
<h1>{{title}}</h1> 
<h2>{{subtitle}}</h2>
<div class = "header-details">
	<div class = "header-input">
		<h4><strong>Student name:</strong> {{studentName}}</h4>
	</div> 
	{% if supervisorName %}
		<div class="header-input">
			<h4><strong>Supervisor name:</strong> {{supervisorName}}</h4>
		</div>
	{% endif %}
	{% if examinerName %}
		<div class="header-input">
			<h4><strong>Examiner name:</strong> {{examinerName}}</h4>
		</div>
	{% endif %}
	{% if totalMark != -1 %}
		<div class="header-input">
			<h4><strong>Total mark: </strong> {{totalMark}}</h4>
		</div<
	{% endif %}
</div>

{{table|raw}}

<div class = "general-comments">
	General comments<br>
	<!--<div class = "comments"><textarea form="{{formID}}" name="comments" {% if commentsReadOnly %} readonly {% endif %}> {{comments}} </textarea></div>-->
	{% if commentsReadOnly %}
		<div class = "comments no-edit"> {{comments}} </div>
	{% else %}
		<div class = "comments"><textarea form="{{formID}}" name="comments"{% if commentsReadOnly %} readonly {% endif %}> {{comments}} </textarea></div>
	{% endif %}
</div>

<!-- Change these to buttons instead? -->
